@model ModelService.AdminBaseViewModel

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@Model.SiteWideSettings.WebsiteName | @ViewBag.Title</title>

    <meta name="description" content="@Model.SiteWideSettings.WebsiteDescription" />
    <meta name="author" content="@Model.SiteWideSettings.WebsiteAuthor" />

    <!-- Favicon Icon -->
    <link href="~/favicon.ico" rel="icon" />

    @await Html.PartialAsync("_ApplicationHeaderStylePartial")
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ==================================================================================== -->
    <!--  Main Wrapper -->
    <!-- ==================================================================================== -->
    <div class="wrapper">
        @await Html.PartialAsync("_SidebarLayout")

        <div id="content">
            @await Html.PartialAsync("_TopbarLayout")
            @RenderBody()
        </div>

        @await Html.PartialAsync("_FooterLayout")
    </div>

    <environment include="Development">

        <script src="~/lib/jquery/jquery.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <!-- Custom JS -->
        <script src="~/lib/custom/js/admin/admin.js"></script>

    </environment>

    <environment exclude="Development">

        <script src="~/lib/jquery/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="~/lib/popper.js/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <!-- Custom JS -->
        <script src="~/lib/custom/js/admin/admin.min.js"></script>

    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>